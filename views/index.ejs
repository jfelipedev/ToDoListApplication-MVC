<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />
    <title>To Do List</title>
  </head>
  <body>
    <%if(message != ''){%>
    <section class="message message-<%= type%>">
      <p><%= message%></p>
      <span id="close-message"><i class="bi bi-x"></i></span>
    </section>
    <%}%>
    <header>
      <% if(task == null){ %>
      <h1>TO DO LIST</h1>
      <form action="/create" method="post">
        <input
          type="text"
          name="task"
          id="task"
          placeholder="Enter a new task"
        />
        <button type="submit" id="addButton">Add Task</button>
      </form>

      <% } else { %>
      <h1>TO DO LIST - EDIT</h1>
      <form action="/updateOne/<%= task._id %>" method="post">
        <input type="text" name="task" id="task" value=" <%= task.task %>" />
        <button type="submit" id="updateButton">Update</button>
      </form>
      <% } %>
    </header>

    <section id="tasks">
      <ul>
        <% tasksList.forEach((task)=>{ %>
        <li>
          <div>
            <a href="/"><%= task.task %> </a>
            <span>Criado em: <%= task.date.toLocaleDateString ('pt-BR')%></span>
          </div>
          <div>
            <a class="updateBTN" href="/getById/<%= task._id %>/update"
              ><i class="bi bi-pencil-square"></i
            ></a>
            <a class="deleteBTN" href="/getById/<%= task._id %>/delete"
              ><i class="bi bi-trash3"></i
            ></a>
          </div>
        </li>

        <% }) %>
      </ul>
    </section>

    <% if(taskDelete != null) {%>
    <section id="modal">
      <div id="card">
        <div id="head">
          <h2>Confirmation</h2>
          <a id="close" href="/"><i class="bi bi-x"></i> </a>
        </div>
        <hr />
        <p>
          Do you like to delete this task:
          <strong><%= taskDelete.task%>?</strong>
        </p>
        <div id="btns">
          <a id="cancelBTN" href="/">Cancel</a>
          <a id="confirmBTN" href="/deleteOne/<%= taskDelete._id%>">Confirm</a>
        </div>
      </div>
    </section>
    <%}%>
    <script src="script.js"></script>
  </body>
</html>
